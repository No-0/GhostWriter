<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ghostwriter.ghostwriter.MainActivity"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="574dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-4dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Grade"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="85dp"
            app:srcCompat="@drawable/title"
            tools:layout_editor_absoluteX="89dp"

            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/Class"
            android:layout_marginEnd="36dp"
            android:layout_toStartOf="@+id/Class"
            android:text="반"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="273dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/imageView2"
            android:text="학년"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="217dp" />

        <Spinner
            android:id="@+id/Class"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="61dp"
            android:entries="@array/Class"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="271dp"
            android:layout_above="@+id/Button"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/Grade"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:entries="@array/Grade"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="209dp"
            android:layout_above="@+id/Class"
            android:layout_toEndOf="@+id/textView2" />

        <Button
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="131dp"
            android:onClick="bHandler"
            android:text="수업시작"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="358dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textview" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Class"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/Button"
            android:text="수업종료" />

    </RelativeLayout>


</LinearLayout>
