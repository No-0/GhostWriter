<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ghostwriter.ghostwriter.MainActivity"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="574dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-4dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Grade"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="85dp"
            app:srcCompat="@drawable/title"
            tools:layout_editor_absoluteX="89dp"

            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="반"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="273dp"
            android:layout_alignTop="@+id/Class"
            android:layout_toStartOf="@+id/Class"
            android:layout_marginEnd="36dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="학년"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="217dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/textView2" />

        <Spinner
            android:id="@+id/Class"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Button"
            android:layout_alignStart="@+id/Grade"
            android:layout_marginBottom="70dp"
            android:entries="@array/Class"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="271dp" />

        <Spinner
            android:id="@+id/Grade"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:entries="@array/Grade"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="209dp"
            android:layout_above="@+id/textView2"
            android:layout_alignStart="@+id/Button" />

        <Button
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="143dp"
            android:onClick="bHandler"
            android:text="수업시작"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="358dp" />

    </RelativeLayout>


</LinearLayout>
